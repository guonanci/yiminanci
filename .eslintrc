{
  "extends": ["eslint:recommended", "plugin:react/recommended", "plugin:flowtype/recommended"],
  # "extends": ["eslint:recommended", "airbnb", "plugin:react/recommended"],
  # "parser": "babel-eslint",
  "plugins": [
    "react",
    "flowtype",
    "compat",
  ],
  "rules": {
    "compat/compat": 2,
    # "no-console": 1,
    "semi": 0,
    "no-var": 2,
    "no-unused-vars": 1,
    "max-len": [2, 180],
    "max-lines": [2, 2000],
    "no-new-object": 2,
    "no-array-constructor": 2,
    "object-shorthand": 1,
    "quote-props": [2, "as-needed"],
    "quotes": [2, "single"],
    "prefer-template": 1,
    "no-useless-concat": 1,
    "template-curly-spacing": 2,
    "no-eval": 2,
    "no-loop-func": 2,
    "prefer-rest-params": 2,
    "no-param-reassign": 2,
    "eqeqeq": 1,
    "indent": [1, 2],
    "jsx-quotes": [2, "prefer-single"],
    # "import/extensions": 0,
    # "import/no-extraneous-dependencies": 0,
    # "import/no-unresolved": 0,
    # "import/prefer-default-export": 0,

    "no-cond-assign": [2, "always"],
    "react/prop-types": 1,
    # "react/jsx-curly-spacing": [2, "always"],
    # "react/jsx-filename-extension": 0
    # "react/prefer-stateless-function": 0,
  },
  "settings": {
    "import/resolver": "webpack",
  },
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 7,
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true,
    }
  },
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
  },
  "globals": {
    "document": true,
    "window": true,
  }
}
